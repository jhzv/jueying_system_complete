    <script>
        // ============================================================================
        // GLOBAL STATE
        // ============================================================================
        const state = {
            ws: null,
            connected: false,
            authenticated: false,
            hasControl: false,
            token: null,
            user: null,
            clientId: null,
            currentMode: 'pose',
            currentGait: 'flat_medium',
            lastPingTime: null,
            latency: 0
        };

        const joysticks = {
            left: {
                canvas: null,
                ctx: null,
                active: false,
                x: 0,
                y: 0,
                centerX: 90,
                centerY: 90,
                maxRadius: 65
            },
            right: {
                canvas: null,
                ctx: null,
                active: false,
                x: 0,
                y: 0,
                centerX: 90,
                centerY: 90,
                maxRadius: 65
            }
        };

        // ============================================================================
        // WEBSOCKET CONNECTION
        // ============================================================================
        function connectWebSocket() {
            const wsUrl = 'ws://localhost:8080';
            
            log('Conectando a WebSocket...', 'info');
            
            state.ws = new WebSocket(wsUrl);
            
            state.ws.onopen = () => {
                state.connected = true;
                updateConnectionStatus('ws', true);
                log('‚úÖ WebSocket conectado', 'success');
            };
            
            state.ws.onclose = () => {
                state.connected = false;
                state.authenticated = false;
                state.hasControl = false;
                updateConnectionStatus('ws', false);
                updateConnectionStatus('udp', false);
                updateConnectionStatus('ros', false);
                log('‚ùå WebSocket desconectado. Reintentando en 3s...', 'error');
                
                setTimeout(connectWebSocket, 3000);
            };
            
            state.ws.onerror = (error) => {
                log('‚ùå Error WebSocket', 'error');
                console.error('WebSocket error:', error);
            };
            
            state.ws.onmessage = (event) => {
                try {
                    const message = JSON.parse(event.data);
                    handleWebSocketMessage(message);
                } catch (error) {
                    console.error('Error parsing message:', error);
                }
            };
        }

        // ============================================================================
        // MESSAGE HANDLER
        // ============================================================================
        function handleWebSocketMessage(message) {
            switch (message.type) {
                case 'connected':
                    state.clientId = message.clientId;
                    document.getElementById('clientIdDisplay').textContent = 
                        `Cliente: ${state.clientId.substring(0, 12)}...`;
                    break;
                
                case 'auth_success':
                    state.authenticated = true;
                    state.token = message.token;
                    state.user = message.user;
                    document.getElementById('userDisplay').textContent = 
                        `Usuario: ${state.user.username} (${state.user.role})`;
                    document.getElementById('loginOverlay').style.display = 'none';
                    document.getElementById('mainContainer').style.display = 'grid';
                    document.getElementById('emergencyContainer').style.display = 'block';
                    log(`‚úÖ Autenticado como ${state.user.username}`, 'success');
                    
                    // Request status
                    sendMessage({ type: 'status' });
                    
                    // Start ping
                    startPing();
                    break;
                
                case 'auth_failed':
                    document.getElementById('loginError').textContent = message.message;
                    document.getElementById('loginError').style.display = 'block';
                    log('‚ùå Autenticaci√≥n fallida', 'error');
                    break;
                
                case 'control_granted':
                    state.hasControl = true;
                    updateControlUI(true);
                    log('‚úÖ Control otorgado', 'success');
                    break;
                
                case 'control_denied':
                    log('‚ö†Ô∏è Control denegado: ' + message.message, 'warning');
                    break;
                
                case 'control_released':
                    state.hasControl = false;
                    updateControlUI(false);
                    log('‚ÑπÔ∏è Control liberado', 'info');
                    break;
                
                case 'control_taken':
                    if (!state.hasControl) {
                        log('‚ö†Ô∏è ' + message.message, 'warning');
                    }
                    break;
                
                case 'control_available':
                    log('‚ÑπÔ∏è Control disponible', 'info');
                    break;
                
                case 'command_result':
                    if (message.success) {
                        log(`‚úÖ Comando ejecutado: ${message.command}`, 'success');
                    } else {
                        log(`‚ùå Comando fall√≥: ${message.command}`, 'error');
                    }
                    break;
                
                case 'status':
                    updateStatus(message.data);
                    break;
                
                case 'telemetry':
                    updateTelemetry(message);
                    break;
                
                case 'pong':
                    if (state.lastPingTime) {
                        state.latency = Date.now() - state.lastPingTime;
                        document.getElementById('latencyDisplay').textContent = 
                            `${state.latency}ms`;
                    }
                    break;
                
                case 'error':
                    log(`‚ùå Error: ${message.message}`, 'error');
                    break;
            }
        }

        // ============================================================================
        // SEND MESSAGE
        // ============================================================================
        function sendMessage(message) {
            if (state.ws && state.ws.readyState === WebSocket.OPEN) {
                state.ws.send(JSON.stringify(message));
                return true;
            }
            log('‚ùå No conectado al servidor', 'error');
            return false;
        }

        // ============================================================================
        // LOGIN
        // ============================================================================
        document.getElementById('loginForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            document.getElementById('loginError').style.display = 'none';
            
            sendMessage({
                type: 'auth',
                username,
                password
            });
        });

        // ============================================================================
        // CONTROL
        // ============================================================================
        document.getElementById('controlBtn').addEventListener('click', () => {
            if (state.hasControl) {
                sendMessage({ type: 'release_control' });
            } else {
                sendMessage({ type: 'request_control' });
            }
        });

        function updateControlUI(hasControl) {
            const btn = document.getElementById('controlBtn');
            const status = document.getElementById('controlStatus');
            
            if (hasControl) {
                btn.textContent = 'Liberar Control';
                btn.className = 'btn btn-danger btn-full';
                status.textContent = 'Tienes el control';
                status.style.color = 'var(--success)';
                
                // Enable action buttons
                document.querySelectorAll('[data-action], [data-gait]').forEach(btn => {
                    btn.disabled = false;
                });
                
                // Show joysticks in MOVE mode
                if (state.currentMode === 'move') {
                    document.getElementById('joysticksContainer').style.display = 'flex';
                }
            } else {
                btn.textContent = 'Tomar Control';
                btn.className = 'btn btn-primary btn-full';
                status.textContent = 'Sin control';
                status.style.color = 'var(--text-secondary)';
                
                // Disable action buttons
                document.querySelectorAll('[data-action], [data-gait]').forEach(btn => {
                    btn.disabled = true;
                });
                
                // Hide joysticks
                document.getElementById('joysticksContainer').style.display = 'none';
                
                // Stop movement
                stopMovement();
            }
        }

        // ============================================================================
        // MODE SWITCHING
        // ============================================================================
        document.querySelectorAll('.mode-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                if (!state.hasControl) {
                    log('‚ö†Ô∏è Necesitas tomar control primero', 'warning');
                    return;
                }
                
                const mode = btn.dataset.mode;
                
                sendMessage({
                    type: 'command',
                    command: 'set_mode',
                    data: { mode }
                });
                
                // Update UI
                state.currentMode = mode;
                updateModeUI(mode);
            });
        });

        function updateModeUI(mode) {
            // Update mode buttons
            document.querySelectorAll('.mode-btn').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.mode === mode);
            });
            
            // Update current mode display
            document.getElementById('currentMode').textContent = mode.toUpperCase();
            document.getElementById('robotModeDisplay').textContent = `Modo: ${mode.toUpperCase()}`;
            
            // Show/hide sections
            if (mode === 'pose') {
                document.getElementById('actionsSection').style.display = 'block';
                document.getElementById('gaitSection').style.display = 'none';
                document.getElementById('joysticksContainer').style.display = 'none';
                stopMovement();
            } else {
                document.getElementById('actionsSection').style.display = 'none';
                document.getElementById('gaitSection').style.display = 'block';
                if (state.hasControl) {
                    document.getElementById('joysticksContainer').style.display = 'flex';
                }
            }
        }

        // ============================================================================
        // ACTIONS (POSE MODE)
        // ============================================================================
        document.querySelectorAll('[data-action]').forEach(btn => {
            btn.addEventListener('click', () => {
                if (!state.hasControl) {
                    log('‚ö†Ô∏è Necesitas tomar control primero', 'warning');
                    return;
                }
                
                if (state.currentMode !== 'pose') {
                    log('‚ö†Ô∏è Las acciones solo funcionan en modo POSE', 'warning');
                    return;
                }
                
                const action = btn.dataset.action;
                
                sendMessage({
                    type: 'command',
                    command: action
                });
            });
        });

        // ============================================================================
        // GAIT SWITCHING (MOVE MODE)
        // ============================================================================
        document.querySelectorAll('[data-gait]').forEach(btn => {
            btn.addEventListener('click', () => {
                if (!state.hasControl) {
                    log('‚ö†Ô∏è Necesitas tomar control primero', 'warning');
                    return;
                }
                
                if (state.currentMode !== 'move') {
                    log('‚ö†Ô∏è Los gaits solo funcionan en modo MOVE', 'warning');
                    return;
                }
                
                const gait = btn.dataset.gait;
                
                sendMessage({
                    type: 'command',
                    command: 'set_gait',
                    data: { gait }
                });
                
                // Update UI
                state.currentGait = gait;
                document.querySelectorAll('[data-gait]').forEach(b => {
                    b.classList.remove('active');
                });
                btn.classList.add('active');
            });
        });

        // ============================================================================
        // EMERGENCY STOP
        // ============================================================================
        document.getElementById('emergencyStopBtn').addEventListener('click', () => {
            if (confirm('¬øEst√°s seguro de activar el PARO DE EMERGENCIA?')) {
                sendMessage({
                    type: 'command',
                    command: 'emergency_stop'
                });
                
                log('üõë PARO DE EMERGENCIA ACTIVADO', 'error');
                
                stopMovement();
            }
        });

        // ============================================================================
        // JOYSTICKS
        // ============================================================================
        function initJoysticks() {
            // Left joystick (translation)
            joysticks.left.canvas = document.getElementById('joystickLeft');
            joysticks.left.ctx = joysticks.left.canvas.getContext('2d');
            
            // Right joystick (rotation)
            joysticks.right.canvas = document.getElementById('joystickRight');
            joysticks.right.ctx = joysticks.right.canvas.getContext('2d');
            
            // Setup event listeners
            setupJoystick(joysticks.left, 'left');
            setupJoystick(joysticks.right, 'right');
            
            // Draw initial state
            drawJoystick(joysticks.left);
            drawJoystick(joysticks.right);
        }

        function setupJoystick(joy, side) {
            const canvas = joy.canvas;
            
            // Mouse events
            canvas.addEventListener('mousedown', (e) => startJoystick(e, joy, side));
            canvas.addEventListener('mousemove', (e) => moveJoystick(e, joy, side));
            canvas.addEventListener('mouseup', () => endJoystick(joy, side));
            canvas.addEventListener('mouseleave', () => endJoystick(joy, side));
            
            // Touch events
            canvas.addEventListener('touchstart', (e) => {
                e.preventDefault();
                startJoystick(e.touches[0], joy, side);
            });
            canvas.addEventListener('touchmove', (e) => {
                e.preventDefault();
                moveJoystick(e.touches[0], joy, side);
            });
            canvas.addEventListener('touchend', () => endJoystick(joy, side));
        }

        function startJoystick(e, joy, side) {
            if (!state.hasControl || state.currentMode !== 'move') return;
            
            joy.active = true;
            moveJoystick(e, joy, side);
        }

        function moveJoystick(e, joy, side) {
            if (!joy.active) return;
            
            const rect = joy.canvas.getBoundingClientRect();
            const x = e.clientX - rect.left - joy.centerX;
            const y = e.clientY - rect.top - joy.centerY;
            
            const distance = Math.sqrt(x * x + y * y);
            
            if (distance < joy.maxRadius) {
                joy.x = x;
                joy.y = y;
            } else {
                const angle = Math.atan2(y, x);
                joy.x = Math.cos(angle) * joy.maxRadius;
                joy.y = Math.sin(angle) * joy.maxRadius;
            }
            
            drawJoystick(joy);
            sendMovementCommand();
        }

        function endJoystick(joy, side) {
            if (!joy.active) return;
            
            joy.active = false;
            joy.x = 0;
            joy.y = 0;
            
            drawJoystick(joy);
            sendMovementCommand();
        }

        function drawJoystick(joy) {
            const ctx = joy.ctx;
            const w = joy.canvas.width;
            const h = joy.canvas.height;
            
            // Clear
            ctx.clearRect(0, 0, w, h);
            
            // Draw base circle
            ctx.beginPath();
            ctx.arc(joy.centerX, joy.centerY, joy.maxRadius, 0, Math.PI * 2);
            ctx.strokeStyle = '#334155';
            ctx.lineWidth = 2;
            ctx.stroke();
            
            // Draw crosshair
            ctx.strokeStyle = '#1e293b';
            ctx.lineWidth = 1;
            ctx.beginPath();
            ctx.moveTo(joy.centerX, joy.centerY - joy.maxRadius);
            ctx.lineTo(joy.centerX, joy.centerY + joy.maxRadius);
            ctx.moveTo(joy.centerX - joy.maxRadius, joy.centerY);
            ctx.lineTo(joy.centerX + joy.maxRadius, joy.centerY);
            ctx.stroke();
            
            // Draw stick
            const stickX = joy.centerX + joy.x;
            const stickY = joy.centerY + joy.y;
            
            ctx.beginPath();
            ctx.arc(stickX, stickY, 20, 0, Math.PI * 2);
            ctx.fillStyle = joy.active ? '#3b82f6' : '#475569';
            ctx.fill();
            ctx.strokeStyle = joy.active ? '#2563eb' : '#334155';
            ctx.lineWidth = 2;
            ctx.stroke();
            
            // Draw line from center to stick
            if (joy.active && (joy.x !== 0 || joy.y !== 0)) {
                ctx.beginPath();
                ctx.moveTo(joy.centerX, joy.centerY);
                ctx.lineTo(stickX, stickY);
                ctx.strokeStyle = '#3b82f6';
                ctx.lineWidth = 2;
                ctx.stroke();
            }
        }

        function sendMovementCommand() {
            if (!state.hasControl || state.currentMode !== 'move') return;
            
            // Calculate percentages (-100 to 100)
            const leftX = Math.round((joysticks.left.x / joysticks.left.maxRadius) * 100);
            const leftY = Math.round((-joysticks.left.y / joysticks.left.maxRadius) * 100); // Invert Y
            const rightX = Math.round((joysticks.right.x / joysticks.right.maxRadius) * 100);
            
            // Update telemetry display
            document.getElementById('telemetryJoyL').textContent = `${leftX}, ${leftY}`;
            document.getElementById('telemetryJoyR').textContent = `${rightX}`;
            
            // Send command
            sendMessage({
                type: 'command',
                command: 'move',
                data: {
                    forward_back: leftY,
                    left_right: leftX,
                    rotation: rightX
                }
            });
        }

        function stopMovement() {
            // Reset joysticks
            joysticks.left.x = 0;
            joysticks.left.y = 0;
            joysticks.right.x = 0;
            joysticks.right.y = 0;
            
            drawJoystick(joysticks.left);
            drawJoystick(joysticks.right);
            
            // Send stop command
            if (state.hasControl && state.currentMode === 'move') {
                sendMessage({
                    type: 'command',
                    command: 'stop'
                });
            }
        }

        // ============================================================================
        // STATUS UPDATES
        // ============================================================================
        function updateConnectionStatus(type, connected) {
            const element = document.getElementById(`${type}Status`);
            if (element) {
                element.className = connected ? 'dot connected' : 'dot disconnected';
            }
        }

        function updateStatus(data) {
            // Update UDP status
            if (data.udp) {
                updateConnectionStatus('udp', data.udp.connected);
                
                if (data.udp.mode) {
                    state.currentMode = data.udp.mode;
                    updateModeUI(data.udp.mode);
                }
                
                if (data.udp.gait) {
                    state.currentGait = data.udp.gait;
                    document.querySelectorAll('[data-gait]').forEach(btn => {
                        btn.classList.toggle('active', btn.dataset.gait === data.udp.gait);
                    });
                }
            }
            
            // Update ROS status
            if (data.ros) {
                updateConnectionStatus('ros', data.ros.connected);
            }
            
            // Update control status
            if (data.control) {
                state.hasControl = data.control.hasControl;
                updateControlUI(state.hasControl);
            }
        }

        function updateTelemetry(message) {
            if (message.topic === 'odometry' && message.data) {
                const twist = message.data.twist.twist;
                
                document.getElementById('telemetryVelX').textContent = 
                    twist.linear.x.toFixed(2) + ' m/s';
                document.getElementById('telemetryVelY').textContent = 
                    twist.linear.y.toFixed(2) + ' m/s';
                document.getElementById('telemetryVelTheta').textContent = 
                    twist.angular.z.toFixed(2) + ' rad/s';
            }
        }

        // ============================================================================
        // PING
        // ============================================================================
        function startPing() {
            setInterval(() => {
                if (state.connected && state.authenticated) {
                    state.lastPingTime = Date.now();
                    sendMessage({ type: 'ping' });
                }
            }, 2000);
        }

        // ============================================================================
        // LOGGING
        // ============================================================================
        function log(message, type = 'info') {
            const container = document.getElementById('logContainer');
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            
            const time = new Date().toLocaleTimeString('es-CO', { 
                hour12: false 
            });
            
            entry.innerHTML = `
                <span class="log-time">[${time}]</span>
                <span class="log-message ${type}">${message}</span>
            `;
            
            container.appendChild(entry);
            container.scrollTop = container.scrollHeight;
            
            // Keep only last 50 logs
            while (container.children.length > 50) {
                container.removeChild(container.firstChild);
            }
        }

        function clearLogs() {
            document.getElementById('logContainer').innerHTML = '';
        }

        // ============================================================================
        // INITIALIZATION
        // ============================================================================
        function init() {
            log('Inicializando interfaz...', 'info');
            
            // Initialize joysticks
            initJoysticks();
            
            // Connect WebSocket
            connectWebSocket();
            
            // Request status every 5 seconds
            setInterval(() => {
                if (state.connected && state.authenticated) {
                    sendMessage({ type: 'status' });
                }
            }, 5000);
        }

        // Start when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', init);
        } else {
            init();
        }
    </script>
</body>
