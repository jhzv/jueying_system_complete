    <script>
        // --- Variables Globales ---
        let ws = null;
        let token = null;
        let refreshToken = null;
        let isAuthenticated = false;
        let hasControl = false;
        let dragging = false;
        let lastJoystickPosition = { linear: 0, angular: 0 };
        let joystickInterval = null;
        let labModeActive = false;
        let videoStreams = { wide: false, depth: false };

        const config = {
            wsUrl: 'ws://localhost:8080',
            apiUrl: 'http://localhost:8080/api'
        };

        let robotState = {
            mode: 'unknown',
            gaitType: 'none',
            bodyHeight: 'nrm',
            velocity: 'medium',
            rugGait: 'none',
            standing: false,
            battery: 0
        };

        // --- Inicializaci√≥n ---
        document.addEventListener('DOMContentLoaded', () => {
            initializeJoystick();
            logMessage('system', 'Sistema iniciado. Ingresa credenciales para conectar.');
            document.addEventListener('keydown', handleKeyboard);
            document.addEventListener('keyup', handleKeyboardRelease);
        });
        
        // --- Autenticaci√≥n ---
        async function authenticate() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if (!username || !password) {
                logMessage('error', 'Ingresa usuario y contrase√±a');
                return;
            }

            try {
                const response = await fetch(`${config.apiUrl}/auth/login`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (data.success) {
                    token = data.accessToken;
                    refreshToken = data.refreshToken;
                    isAuthenticated = true;
                    
                    updateAuthStatus(true, username);
                    logMessage('info', `Autenticado como ${username} (${data.user.role})`);
                    
                    document.getElementById('authSection').style.display = 'none';
                    document.getElementById('controlSection').style.display = 'block';
                    document.getElementById('commandSection').style.display = 'block';
                    document.getElementById('modeSection').style.display = 'block';
                    
                    connectToServer();
                } else {
                    logMessage('error', 'Credenciales inv√°lidas');
                }
            } catch (error) {
                logMessage('error', `Error de autenticaci√≥n: ${error.message}`);
            }
        }

        // --- Conexi√≥n WebSocket ---
        function connectToServer() {
            ws = new WebSocket(config.wsUrl);
            
            ws.onopen = () => {
                updateConnectionStatus(true);
                logMessage('info', 'Conectado al servidor WebSocket');
                ws.send(JSON.stringify({ type: 'auth', token: token }));
            };

            ws.onmessage = (event) => {
                const msg = JSON.parse(event.data);
                handleMessage(msg);
            };

            ws.onclose = () => {
                updateConnectionStatus(false);
                logMessage('warning', 'Desconectado. Reintentando en 3s...');
                setTimeout(connectToServer, 3000);
            };

            ws.onerror = () => {
                logMessage('error', 'Error de WebSocket');
                updateConnectionStatus(false);
            };
        }

        function handleMessage(msg) {
            logMessage('system', `Mensaje: ${msg.type}`);
            
            switch(msg.type) {
                case 'auth_success':
                    logMessage('info', 'WebSocket autenticado correctamente');
                    break;
                case 'ros_connection':
                    updateRosStatus(msg.connected);
                    break;
                case 'control_granted':
                    hasControl = true;
                    updateControlStatus(true);
                    logMessage('info', '‚úÖ Control del robot otorgado');
                    enableControls(true);
                    break;
                case 'control_denied':
                    logMessage('warning', `‚ö†Ô∏è Control denegado: ${msg.reason}`);
                    break;
                case 'control_released':
                    hasControl = false;
                    updateControlStatus(false);
                    logMessage('warning', 'Control liberado');
                    enableControls(false);
                    break;
                case 'control_available':
                    logMessage('info', 'Control disponible');
                    break;
                case 'ros_data':
                    updateRobotState(msg);
                    break;
            }
        }

        // --- Control del Robot ---
        function requestControl() {
            if (ws && ws.readyState === WebSocket.OPEN) {
                ws.send(JSON.stringify({ type: 'control_request', action: 'request' }));
                logMessage('info', 'Solicitando control...');
            }
        }

        function releaseControl() {
            if (ws && ws.readyState === WebSocket.OPEN) {
                sendVelocity(0, 0);
                ws.send(JSON.stringify({ type: 'control_request', action: 'release' }));
            }
        }

        function sendROSCommand(topic, msgType, msg) {
            if (!hasControl) {
                logMessage('warning', 'Necesitas control para enviar comandos');
                return;
            }
            
            if (ws && ws.readyState === WebSocket.OPEN) {
                ws.send(JSON.stringify({
                    type: 'ros_command',
                    topic: topic,
                    msgType: msgType,
                    msg: msg
                }));
                logMessage('info', `Comando enviado: ${topic} -> ${JSON.stringify(msg)}`);
            }
        }

        function sendStandCommand() {
            sendROSCommand('/pose_cmd', 'std_msgs/String', { data: 'stand' });
            // Simulaci√≥n de respuesta del robot
            setTimeout(() => {
                robotState.standing = true;
                updateUIBasedOnState();
            }, 2500);
        }

        function sendSitCommand() {
            sendROSCommand('/pose_cmd', 'std_msgs/String', { data: 'sit' });
            robotState.standing = false;
            robotState.mode = 'unknown';
            updateUIBasedOnState();
        }

        function sendEmergencyStop() {
            sendVelocity(0, 0);
            sendROSCommand('/emergency_stop', 'std_msgs/Bool', { data: true });
            logMessage('error', '‚ö†Ô∏è PARADA DE EMERGENCIA ENVIADA ‚ö†Ô∏è');
        }

        function setMode(mode) {
            if (!robotState.standing) {
                logMessage('warning', `El robot debe estar de pie para entrar en modo '${mode}'.`);
                return;
            }
            robotState.mode = mode;
            sendROSCommand('/motion_mode', 'std_msgs/String', { data: mode });
            updateUIBasedOnState();
        }

        function setGaitType(type) {
            if (robotState.mode !== 'move') {
                logMessage('warning', "Primero selecciona 'Move Mode'.");
                return;
            }
            robotState.gaitType = type;
            sendROSCommand('/gait_cmd', 'std_msgs/String', { data: type });
            updateUIBasedOnState();
            // Default selections
            if(type === 'flat') setBodyHeight('nrm');
            if(type === 'rug') setRugGait('general');
        }

        function setBodyHeight(height) {
            robotState.bodyHeight = height;
            sendROSCommand('/body_height', 'std_msgs/String', { data: height });
            updateUIBasedOnState();
            if (height === 'nrm') setVelocity('medium');
        }

        function setVelocity(vel) {
            robotState.velocity = vel;
            sendROSCommand('/velocity_setting', 'std_msgs/String', { data: vel });
            updateUIBasedOnState();
        }

        function setRugGait(gait) {
            robotState.rugGait = gait;
            sendROSCommand('/rug_gait', 'std_msgs/String', { data: gait });
            updateUIBasedOnState();
        }

        function executePose() {
            const pose = document.getElementById('poseSelect').value;
            if (pose) sendROSCommand('/pose_cmd', 'std_msgs/String', { data: pose });
        }

        function sendVelocity(linear, angular) {
            if (!hasControl) return;
            
            sendROSCommand('/cmd_vel', 'geometry_msgs/Twist', {
                linear: { x: linear, y: 0, z: 0 },
                angular: { x: 0, y: 0, z: angular }
            });
            
            document.getElementById('linearX').textContent = linear.toFixed(2);
            document.getElementById('angularZ').textContent = angular.toFixed(2);
        }

        // --- Joystick ---
        function initializeJoystick() {
            const container = document.getElementById('joystickContainer');
            const joystick = document.getElementById('joystick');
            const radius = 100;

            function handleStart(e) {
                if (!hasControl || robotState.mode !== 'move') {
                    if (hasControl && robotState.mode !== 'move') {
                        logMessage('warning', "Activa 'Move Mode' para usar el joystick");
                    }
                    return;
                }
                dragging = true;
                joystick.style.transition = 'none';
                
                // Iniciar env√≠o continuo SOLO cuando se presiona
                joystickInterval = setInterval(() => {
                    if (hasControl && robotState.mode === 'move' && dragging) {
                        sendVelocity(lastJoystickPosition.linear, lastJoystickPosition.angular);
                    }
                }, 50);
            }

            function handleEnd() {
                if (!dragging) return;
                dragging = false;
                joystick.style.transition = '0.2s ease-out';
                joystick.style.left = '50%';
                joystick.style.top = '50%';
                lastJoystickPosition = { linear: 0, angular: 0 };
                sendVelocity(0, 0);
                
                // DETENER env√≠o continuo cuando se suelta
                if (joystickInterval) {
                    clearInterval(joystickInterval);
                    joystickInterval = null;
                }
            }

            function handleMove(e) {
                if (!dragging) return;
                e.preventDefault();
                
                const rect = container.getBoundingClientRect();
                const clientX = e.touches ? e.touches[0].clientX : e.clientX;
                const clientY = e.touches ? e.touches[0].clientY : e.clientY;

                let x = clientX - rect.left - radius;
                let y = clientY - rect.top - radius;

                const dist = Math.sqrt(x * x + y * y);
                if (dist > 80) {
                    x = (x / dist) * 80;
                    y = (y / dist) * 80;
                }

                joystick.style.left = `${radius + x}px`;
                joystick.style.top = `${radius + y}px`;

                const linear = -y / 80;
                const angular = x / 80;
                
                lastJoystickPosition = { linear, angular };
                sendVelocity(linear, angular);
            }

            container.addEventListener('mousedown', handleStart);
            document.addEventListener('mouseup', handleEnd);
            document.addEventListener('mousemove', handleMove);
            container.addEventListener('touchstart', handleStart, { passive: false });
            document.addEventListener('touchend', handleEnd);
            document.addEventListener('touchmove', handleMove, { passive: false });
        }

        // --- Teclado ---
        const keys = new Set();
        function handleKeyboard(e) {
            if (!hasControl || robotState.mode !== 'move') return;
            keys.add(e.key.toLowerCase());
            updateFromKeys();
        }
        
        function handleKeyboardRelease(e) {
            keys.delete(e.key.toLowerCase());
            if(keys.size === 0) updateFromKeys();
        }
        
        function updateFromKeys() {
            let lin = 0, ang = 0;
            if (keys.has('w')) lin = 1;
            if (keys.has('s')) lin = -1;
            if (keys.has('a')) ang = 1;
            if (keys.has('d')) ang = -1;
            if (keys.has(' ')) { sendEmergencyStop(); return; }
            sendVelocity(lin, ang);
        }

        // --- Heartbeat ---
        setInterval(() => {
            if (ws && ws.readyState === WebSocket.OPEN) {
                ws.send(JSON.stringify({ type: 'heartbeat' }));
            }
        }, 5000);

        // --- UI Updates ---
        function updateUIBasedOnState() {
            // Estado del robot
            document.getElementById('robotState').textContent = robotState.standing ? "De Pie" : "Sentado";
            document.getElementById('robotMode').textContent = robotState.mode === 'unknown' ? '--' : robotState.mode;
            document.getElementById('currentGait').textContent = robotState.gaitType === 'none' ? '--' : robotState.gaitType.toUpperCase();

            // Botones de comando b√°sico
            document.getElementById('standBtn').disabled = !hasControl || robotState.standing;
            document.getElementById('sitBtn').disabled = !hasControl || !robotState.standing;

            // Botones de Modo
            document.getElementById('moveBtn').disabled = !hasControl || !robotState.standing;
            document.getElementById('poseBtn').disabled = !hasControl || !robotState.standing;
            document.getElementById('moveBtn').classList.toggle('btn-active', robotState.mode === 'move');
            document.getElementById('poseBtn').classList.toggle('btn-active', robotState.mode === 'pose');
            
            // Opciones de modo
            document.getElementById('gaitOptions').style.display = (robotState.mode === 'move') ? 'block' : 'none';
            document.getElementById('poseOptions').style.display = (robotState.mode === 'pose') ? 'block' : 'none';
            document.getElementById('poseSelect').disabled = !hasControl;

            // Opciones de Gait
            const enableGaits = hasControl && robotState.mode === 'move';
            document.getElementById('flatBtn').disabled = !enableGaits;
            document.getElementById('rugBtn').disabled = !enableGaits;
            document.getElementById('flatBtn').classList.toggle('btn-active', robotState.gaitType === 'flat');
            document.getElementById('rugBtn').classList.toggle('btn-active', robotState.gaitType === 'rug');

            // Sub-opciones de Flat
            document.getElementById('flatOptions').style.display = enableGaits && robotState.gaitType === 'flat' ? 'block' : 'none';
            if (enableGaits && robotState.gaitType === 'flat') {
                document.getElementById('nrmBtn').disabled = false;
                document.getElementById('crawlBtn').disabled = false;
                document.getElementById('nrmBtn').classList.toggle('btn-active', robotState.bodyHeight === 'nrm');
                document.getElementById('crawlBtn').classList.toggle('btn-active', robotState.bodyHeight === 'crawl');

                const enableVelocity = robotState.bodyHeight === 'nrm';
                ['slowBtn', 'mediumBtn', 'fastBtn'].forEach(id => document.getElementById(id).disabled = !enableVelocity);
                if (enableVelocity) {
                    ['slowBtn', 'mediumBtn', 'fastBtn'].forEach(id => document.getElementById(id).classList.remove('btn-active'));
                    document.getElementById(robotState.velocity + 'Btn').classList.add('btn-active');
                }
            }
            
            // Sub-opciones de RUG
            document.getElementById('rugOptions').style.display = enableGaits && robotState.gaitType === 'rug' ? 'block' : 'none';
            if (enableGaits && robotState.gaitType === 'rug') {
                ['generalBtn', 'gripBtn', 'hstepBtn'].forEach(id => document.getElementById(id).disabled = false);
                ['generalBtn', 'gripBtn', 'hstepBtn'].forEach(id => document.getElementById(id).classList.remove('btn-active'));
                document.getElementById(robotState.rugGait + 'Btn').classList.add('btn-active');
            }
        }

        function updateConnectionStatus(connected) {
            document.getElementById('wsStatus').className = 'status-dot ' + (connected ? 'status-connected' : 'status-disconnected');
            document.getElementById('wsText').textContent = connected ? 'WebSocket: ON' : 'WebSocket: OFF';
        }

        function updateAuthStatus(authenticated, username = 'NO') {
            document.getElementById('authStatus').className = 'status-dot ' + (authenticated ? 'status-connected' : 'status-disconnected');
            document.getElementById('authText').textContent = 'Auth: ' + username;
        }

        function updateControlStatus(active) {
            document.getElementById('controlStatus').className = 'status-dot ' + (active ? 'status-connected' : 'status-disconnected');
            document.getElementById('controlText').textContent = active ? 'Control: YES' : 'Control: NO';
            document.getElementById('releaseControlBtn').disabled = !active;
            document.getElementById('requestControlBtn').disabled = active;
            
            // Habilitar controles principales
            ['labModeBtn', 'wideVideoBtn', 'depthVideoBtn'].forEach(id => document.getElementById(id).disabled = !active);
            updateUIBasedOnState();
        }

        function updateRosStatus(connected) {
            document.getElementById('rosStatus').className = 'status-dot ' + (connected ? 'status-connected' : 'status-disconnected');
            document.getElementById('rosText').textContent = connected ? 'ROS: ON' : 'ROS: OFF';
        }

        function enableControls(enabled) {
            document.getElementById('standBtn').disabled = !enabled;
            document.getElementById('sitBtn').disabled = !enabled;
            updateUIBasedOnState();
        }

        function updateRobotState(data) {
            // Aqu√≠ procesar√≠as los datos reales de ROS que llegan del servidor
            if (data.topic === '/battery_state') {
                robotState.battery = Math.round((data.msg.percentage || 0) * 100);
                document.getElementById('batteryLevel').textContent = `${robotState.battery}%`;
            }
            // Agregar m√°s procesamiento de datos ROS seg√∫n necesidades
        }

        // --- Funciones Adicionales (Lab, Video) ---
        function toggleLabMode() {
            if (!hasControl) {
                logMessage('warning', 'Necesitas control para activar modo laboratorio');
                return;
            }
            labModeActive = !labModeActive;
            document.getElementById('labFeatures').style.display = labModeActive ? 'block' : 'none';
            document.getElementById('labBadge').textContent = labModeActive ? 'ACTIVO' : 'INACTIVO';
            document.getElementById('labBadge').className = labModeActive ? 'badge badge-active' : 'badge badge-lab';
            logMessage('info', `Modo laboratorio ${labModeActive ? 'activado' : 'desactivado'}.`);
        }

        function sendLabCommand(cmd) {
            if (!labModeActive) {
                logMessage('warning', 'Activa modo laboratorio primero');
                return;
            }
            sendROSCommand('/lab_cmd', 'std_msgs/String', { data: cmd });
        }

        function toggleVideo(type) {
            if (!hasControl) {
                logMessage('warning', 'Necesitas control para activar video');
                return;
            }
            videoStreams[type] = !videoStreams[type];
            const btn = document.getElementById(`${type}VideoBtn`);
            btn.classList.toggle('btn-active', videoStreams[type]);
            sendROSCommand('/camera_control', 'std_msgs/String', { 
                data: JSON.stringify({ camera: type, enabled: videoStreams[type] }) 
            });
            
            const anyStreamActive = Object.values(videoStreams).some(v => v);
            document.getElementById('videoPreview').textContent = anyStreamActive ? 'Video Stream ON' : 'Video Stream OFF';
            logMessage('info', `Video ${type}: ${videoStreams[type] ? 'ON' : 'OFF'}`);
        }

        function logMessage(type, message) {
            const log = document.getElementById('messageLog');
            const time = new Date().toLocaleTimeString();
            const entry = document.createElement('div');
            entry.className = `log-entry log-${type}`;
            entry.textContent = `[${time}] ${message}`;
            log.appendChild(entry);
            log.scrollTop = log.scrollHeight;
        }

        // --- Limpieza ---
        window.addEventListener('beforeunload', () => {
            if (hasControl) releaseControl();
            if (ws) ws.close();
            if (joystickInterval) clearInterval(joystickInterval);
        });
    </script>
</body>
</html>