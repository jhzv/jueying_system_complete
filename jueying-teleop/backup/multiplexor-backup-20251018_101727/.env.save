# ============================================================
f# SERVIDOR
# ============================================================
PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# ============================================================
# ROS / ROSBRIDGE
# ============================================================
ROSBRIDGE_URL=ws://localhost:9090

# ============================================================
# ROBOT - MOTION HOST (RK3588)
# ============================================================
ROBOT_MOTION_HOST=192.168.1.120
ROBOT_MOTION_PORT=43893

# ============================================================
# ROBOT - PERCEPTION HOST (Jetson Xavier NX)
# ============================================================
ROBOT_PERCEPTION_HOST=192.168.1.103

# ============================================================
# SEGURIDAD
# ============================================================
# CAMBIAR EN PRODUCCIÓN - Generar con: openssl rand -base64 32
JWT_SECRET=CAMBIAR_secreto_ultra_seguro_produccion_2024
JWT_EXPIRATION=24h

# ============================================================
# CONTROL Y TIMEOUTS
# ============================================================
# Heartbeat UDP (ms) - Recomendado: 250ms (4Hz)
HEARTBEAT_INTERVAL=250

# Timeout de seguridad para movimiento (ms)
MOVEMENT_TIMEOUT=250

# Timeout de seguridad para comandos (ms)
COMMAND_TIMEOUT=1000

# Máximo de clientes simultáneos
MAX_CLIENTS=5

# ============================================================
# RATE LIMITING
# ============================================================
# Comandos de movimiento por segundo
RATE_LIMIT_MOVEMENT=20

# Comandos discretos por segundo
RATE_LIMIT_COMMANDS=10

#xzdfsfsf ============================================================
# CARACTERÍSTICAS OPCIONALES
# ============================================================
# Habilitar SSL/TLS (requiere certificados)
USE_SSL=false
SSL_KEY=certs/key.pem
SSL_CERT=certs/cert.pem

# Habilitar CORS
ENABLE_CORS=true
CORS_ORIGIN=*

# Habilitar modo debug
DEBUG_UDP=false
DEBUG_ROS=false
DEBUG_WS=false
